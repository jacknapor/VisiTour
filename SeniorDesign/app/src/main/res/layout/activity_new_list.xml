<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bucknell.seniordesign.NewListActivity">

    <Button
        android:id="@+id/newListButton"
        android:layout_width="366dp"
        android:layout_height="65dp"
        android:text="Create New List"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameField" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="Enter List Name..."
        android:inputType="textPersonName"
        android:text="Enter List Name..."
        app:layout_constraintBottom_toTopOf="@+id/newListButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
