<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listItemImage"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listItemImage"
        android:text="TextView"
        android:textSize="25sp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/visitedTextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/visitedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/visited"
        android:layout_alignBottom="@+id/visited"
        android:layout_toEndOf="@+id/listItemImage"
        android:layout_toRightOf="@+id/listItemImage"
        android:text="Visited:"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/visitedTextView"
        android:layout_alignBottom="@+id/visitedTextView"
        android:layout_toLeftOf="@+id/visited"
        android:layout_toStartOf="@+id/visited"
        android:text="Progress:"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/visited"
        android:layout_alignBottom="@+id/visited"
        android:layout_toEndOf="@+id/progressTextView"
        android:layout_toRightOf="@+id/progressTextView"
        android:text="TextView"
        android:textSize="20sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/listItemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <CheckBox
        android:id="@+id/visited"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/textViewDescription"
        android:layout_toRightOf="@+id/visitedTextView"
        android:background="?android:attr/listChoiceIndicatorMultiple"
        android:button="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:focusable="false"
        android:src="@drawable/ic_delete_black_12dp"
        app:srcCompat="@android:drawable/ic_menu_delete" />


</RelativeLayout>
